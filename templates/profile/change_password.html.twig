{% extends 'layout.html.twig' %}

{% block title %}
Change Password
{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Change Password</h1>

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}

            <div class="card shadow-sm">
                <div class="card-body">
                    {{ form_start(changePasswordForm) }}
                        <div class="form-group mb-3">
                            {{ form_label(changePasswordForm.currentPassword) }}
                            {{ form_widget(changePasswordForm.currentPassword, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-text">Enter your current password.</div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(changePasswordForm.plainPassword) }}
                            {{ form_widget(changePasswordForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-text">Choose a new strong password.</div>
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(changePasswordForm.confirmPassword) }}
                            {{ form_widget(changePasswordForm.confirmPassword, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-text">Re-enter the new password for confirmation.</div>
                        </div>

                        <div class="text-center">
                            {{ form_widget(changePasswordForm.save, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
                        </div>
                    {{ form_end(changePasswordForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
