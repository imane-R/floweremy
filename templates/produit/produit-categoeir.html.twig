{% extends 'layout.html.twig' %}

{% block title %}
  {{ categorie.NomCategorie }} - Produits
{% endblock %}

{% block content %}
  <!-- banner section -->
  <section class="firstSection">
    <div>
      <h1 class="title">
        Fleurs,ðŸŒ»<br />
        ce dont le monde a besoin
      </h1>
      <button class="browseBtn">Naviguer</button>
    </div>
    <div class="presentationImg">
      <img src="{{ asset('images/banner/Rectangle 3.png') }}" alt="flower" class="preImage" />
      <img src="{{ asset('images/banner/Rectangle 4.png') }}" alt="flower" class="preImage" />
      <img src="{{ asset('images/banner/Rectangle 5.png') }}" alt="flower" class="preImage" />
